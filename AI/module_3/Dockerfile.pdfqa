FROM python:3.12-slim

WORKDIR /app

RUN apt-get update && \
    apt-get install -y --no-install-recommends curl && \
    rm -rf /var/lib/apt/lists/*

COPY pdf_qa_requirements.txt .
RUN pip install --no-cache-dir -r pdf_qa_requirements.txt

COPY pdf_qa_server.py .

CMD ["uvicorn", "pdf_qa_server:app", "--host", "0.0.0.0", "--port", "9000"]